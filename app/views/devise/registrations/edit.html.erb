 <!-- hero -->
 <div class="hero fullscreen">
  <div class="hero-body">
    <div class="content">

      <!-- form starts -->
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "frame p-0", method: :put }) do |f| %>
      <%= f.error_notification %>
      <div class="frame__body p-0">
        <div class="row p-0 level fill-height">
          <div class="col-6 p-0 bg"></div>
          <div class="col-6">
            <div class="space"></div>
  >
            <div class="padded">

              <!-- title  -->
              <h3>Edit <%= resource_name.to_s.humanize %></h3>

               <!-- name  -->
              <div class="row p-0">
                  <div class="col-6">

                      <div class="input-control">
                          <%= f.input_field :first_name,
                                            required: true,
                                            autofocus: true,
                                            input_html: { autocomplete: "first name" }, class: 'input-contains-icon', placeholder: 'First name' %>
                          <span class="icon">
                              <i class="far fa-wrapper fa-user-circle small"></i>
                          </span>
                      </div>
                  </div>
                  <div class="col-6">
                      <div class="input-control">
                           <%= f.input_field :last_name,
                                            required: true,
                                            autofocus: true,
                                            input_html: { autocomplete: "last name" }, class: 'input-contains-icon', placeholder: 'Last name' %>
                          <span class="icon">
                              <i class="far fa-wrapper fa-user-circle small"></i>
                          </span>
                      </div>
                  </div>
              </div>

              <!-- email  -->
              <div class="form-section mt-3">
                <div class="input-control">
                  <%= f.input_field :email,
                    required: true,
                    autofocus: true,
                    input_html: { autocomplete: "email" }, class: 'input-contains-icon', placeholder: 'Email' %>
                  <span class="icon"><i class="far fa-wrapper fa-envelope-open small"></i></span>
                </div>
              </div>

              <!-- password -->
              <div class="form-section mt-3">
                <div class="input-control">
                  <%= f.input_field :password,
                    required: true,
                    hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                    input_html: { autocomplete: "new-password" }, class: 'input-contains-icon', placeholder: 'New password' %>
                  <span class="icon"><i class="fas fa-wrapper fa-key small"></i></span>
                </div>
              </div>

              <div class="form-section mt-3">
                <div class="input-control">
                  <%= f.input_field :password_confirmation,
                    required: true,
                    input_html: { autocomplete: "new-password" }, class: 'input-contains-icon', placeholder: 'Confirm password' %>
                  <span class="icon"><i class="fas fa-wrapper fa-key small"></i></span>
                </div>
              </div>

              <div class="form-section mt-3">
                <div class="input-control">
                  <%= f.input_field :current_password,
                    hint: "we need your current password to confirm your changes",
                    required: true,
                    input_html: { autocomplete: "current-password" }, class: 'input-contains-icon', placeholder: 'Current password' %>
                  <span class="icon"><i class="fas fa-wrapper fa-key small"></i></span>
                </div>
              </div>

              <!-- photo  -->
              <div class="form-section mt-3">
                <div class="input-control">
                  <%= f.input_field :photo, as: :file, class: 'input-contains-icon' %>
                   <span class="icon"><i class="fa-wrapper far fa-images"></i></span>
                </div>
              </div>
              <div class="u-text-right">
                 <%= f.button :submit, "Sign up", class: 'btn-primary mt-3' %>
              </div>

              <div class="divider mb-0"></div>
              <div class="mb-5">
                <h6 class="mt-0">Cancel my account</h6>

                    <p>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>
                  <div class="u-text-right mt-1">
                    <%= link_to "Back", :back, class: 'btn btn-plain' %>
                  </div>
              </div>

            </div>
          </div>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>
